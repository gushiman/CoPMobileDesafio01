<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_colaborador"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PersistirColaboradorActivity">

    <TextView
        android:id="@+id/textview_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:" />

    <EditText
        android:id="@+id/edittext_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textview_conhecimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conhecimentos" />

    <TextView
        android:id="@+id/textview_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile:" />

    <RadioGroup
        android:id="@+id/radiogroup_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobutton_mobile_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            android:id="@+id/radiobutton_mobile_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/radiobutton_mobile_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

    </RadioGroup>

    <TextView
        android:id="@+id/textview_ux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UX:" />

    <RadioGroup
        android:id="@+id/radiogroup_ux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobutton_ux_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            android:id="@+id/radiobutton_ux_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/radiobutton_ux_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

    </RadioGroup>

    <TextView
        android:id="@+id/textview_cursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cursos:" />

    <CheckBox
    android:id="@+id/checkbox_android_basico"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Android - Módulo Básico"/>

    <CheckBox
        android:id="@+id/checkbox_android_avancado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android - Módulo Avançado"/>

    <CheckBox
        android:id="@+id/checkbox_ux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UX"/>

    <Button
        android:id="@+id/button_gravar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravar"/>

</LinearLayout>
